# MongoDB NoSQL Labs - Environment Configuration Template
# Copy this file to .env and update with your values
# cp .env.template .env

# ==============================================================================
# MongoDB Connection Settings
# ==============================================================================

# MongoDB connection URI
# For local MongoDB: mongodb://localhost:27017
# For Docker: mongodb://mongodb:27017
# For replica set: mongodb://localhost:27017,localhost:27018,localhost:27019/?replicaSet=rs0
# For Atlas: mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_URI=mongodb://localhost:27017

# Default database name for labs
MONGODB_DB_NAME=nosql_labs

# MongoDB connection options (optional)
MONGODB_CONNECTION_TIMEOUT=30000
MONGODB_SOCKET_TIMEOUT=30000
MONGODB_MAX_POOL_SIZE=10

# ==============================================================================
# Replica Set Configuration (Lab 05)
# ==============================================================================

# Replica set name
REPLICA_SET_NAME=rs0

# Replica set members (comma-separated)
REPLICA_SET_MEMBERS=localhost:27017,localhost:27018,localhost:27019

# ==============================================================================
# MongoDB Atlas Configuration (Optional)
# ==============================================================================

# Atlas cluster connection string (if using Atlas)
ATLAS_URI=

# Atlas API credentials (for programmatic access)
ATLAS_PUBLIC_KEY=
ATLAS_PRIVATE_KEY=
ATLAS_PROJECT_ID=

# Atlas Search index name
ATLAS_SEARCH_INDEX=default

# ==============================================================================
# Application Settings
# ==============================================================================

# Node environment (development, production, test)
NODE_ENV=development

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# Enable detailed error messages
DEBUG=false

# Test timeout (milliseconds)
TEST_TIMEOUT=60000

# ==============================================================================
# Lab-Specific Settings
# ==============================================================================

# Lab 01: Import batch size
LAB01_BATCH_SIZE=1000

# Lab 02: Enable schema validation
LAB02_SCHEMA_VALIDATION=true

# Lab 03: Query result limit
LAB03_QUERY_LIMIT=100

# Lab 04: Aggregation pipeline max stages
LAB04_MAX_STAGES=20

# Lab 05: Replication monitoring interval (ms)
LAB05_MONITOR_INTERVAL=5000

# ==============================================================================
# Modern Features Lab Settings
# ==============================================================================

# Change Streams
CHANGE_STREAM_ENABLED=true
CHANGE_STREAM_RESUME_AFTER_MS=10000

# Time Series
TIMESERIES_GRANULARITY=seconds
TIMESERIES_EXPIRE_AFTER_SECONDS=86400

# GridFS
GRIDFS_BUCKET_NAME=uploads
GRIDFS_CHUNK_SIZE=261120

# Vector Search
VECTOR_DIMENSIONS=384
VECTOR_SIMILARITY=cosine

# ==============================================================================
# Performance Settings
# ==============================================================================

# Enable query profiling
PROFILING_ENABLED=false
PROFILING_SLOW_MS=100

# Cache settings
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300

# Batch processing
BATCH_SIZE=100
PARALLEL_WORKERS=4

# ==============================================================================
# Security Settings (Optional)
# ==============================================================================

# MongoDB authentication (if enabled)
MONGODB_USERNAME=
MONGODB_PASSWORD=

# Encryption settings
ENCRYPTION_KEY=
ENCRYPTION_ALGORITHM=aes-256-gcm

# ==============================================================================
# Docker Settings (if using Docker)
# ==============================================================================

# MongoDB Docker container name
MONGODB_CONTAINER_NAME=mongodb-labs

# MongoDB data volume path
MONGODB_DATA_PATH=./data/mongodb

# Docker network name
DOCKER_NETWORK=mongodb-labs-network

# ==============================================================================
# Group Work Settings (for instructors)
# ==============================================================================

# Enable group work features
GROUP_WORK_ENABLED=false

# Submission deadline (ISO 8601)
SUBMISSION_DEADLINE=2024-12-31T23:59:59Z

# Auto-grading enabled
AUTO_GRADING_ENABLED=false

# Maximum group size
MAX_GROUP_SIZE=4

# ==============================================================================
# Development Tools
# ==============================================================================

# Enable hot reload
HOT_RELOAD=true

# Source maps
SOURCE_MAPS=true

# Prettier formatting
PRETTIER_ENABLED=true

# ESLint checking
ESLINT_ENABLED=true

# ==============================================================================
# External Services (Optional)
# ==============================================================================

# Webhook URL for notifications
WEBHOOK_URL=

# Email settings (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@nosql-labs.edu

# Slack integration
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#nosql-labs

# ==============================================================================
# Notes
# ==============================================================================
# 1. Never commit .env files to version control
# 2. Keep production credentials separate
# 3. Use environment-specific .env files (.env.development, .env.production)
# 4. Validate all environment variables at startup
# 5. Document any new variables added here